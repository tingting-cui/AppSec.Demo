@model Item
@{
    ViewData["Title"] = "Delete Item";
}

<form method="post" asp-action="DeleteItem">
    <input asp-for="Item_id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete item</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="PickUpNote"></label>
            <input asp-for="PickUpNote" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Location"></label>
            <input asp-for="Location" disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    } 
}